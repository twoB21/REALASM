@model BookVM
<p>Edit a Book</p>
<form method="post" enctype="multipart/form-data">
	<div class="border p-3 mt-4">
		<input hidden asp-for="Book.Id"/>
		<input hidden asp-for = "Book.ImageUrl"/>
		<div class="mb-3 row">
			<label asp-for="Book.Title"></label>
			<input asp-for="Book.Title" />
			<span asp-validation-for="Book.Title" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Book.Description"></label>
			<input asp-for="Book.Description" />
			<span asp-validation-for="Book.Description" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Book.Author"></label>
			<input asp-for="Book.Author" />
			<span asp-validation-for="Book.Author" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Book.Price"></label>
			<input asp-for="Book.Price" />
			<span asp-validation-for="Book.Price" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Book.Category"></label>
			<select asp-for=Book.CategoryId asp-items="Model.Categories"></select>
		</div>
		<div class="mb-3 row">
			<label asp-for="Book.ImageUrl"></label>
			<input type="file" name="file" class="form-control" />
		</div>
		<img src="@Model.Book.ImageUrl" sizes="40%"/>
		<button type="submit" class="btn btn-primary">Edit</button>
		<a asp-controller="Book" asp-action="Index" class="btn btn-primary">Return</a>
	</div>
</form>